<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - What Can You Wear Tonight</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="padding: 0">
                    <img src="../../Content/Images/icon.svg" alt="WCIWTLogo">
                </a>
                <span></span>
                @Html.ActionLink("What Can I Wear Tonight", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @{
                Html.RenderPartial("~/Views/Shared/_UserMenu.cshtml");
             }
        </div>
    </div>
    <div class="container body-content" style="margin-top: 100px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Martin Hamernik, Stepan Trcka for PV179.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
