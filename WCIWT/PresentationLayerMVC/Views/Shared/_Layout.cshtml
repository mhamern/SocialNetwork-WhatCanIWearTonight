<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - What Can You Wear Tonight</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="padding: 0">
                    <img src="../../Content/Images/icon.svg" alt="WCIWTLogo">
                </a>
                <span></span>
                @Html.ActionLink("What Can I Wear Tonight", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        </a>
                    <ul class="dropdown-menu"> 
                        <li>User Name Here</li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">My Profile</a></li>
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Logout</a></li>

                    </ul>
                </li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Martin Hamernik, Stepan Trcka for PV179.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
