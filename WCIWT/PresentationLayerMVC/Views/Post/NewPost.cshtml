@model PresentationLayerMVC.Models.Posts.CreatePostModel
@{
    ViewBag.Title = "Create New Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create New Post</h2>
@using (Html.BeginForm("NewPost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Post.Text,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Post.Text,
                    new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Post.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Post.Visibility,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Post.Visibility,
                    new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Post.Visibility, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Post.GenderRestriction,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Post.GenderRestriction,
                    new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Post.GenderRestriction, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Post.HasAgeRestriction,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Post.HasAgeRestriction,
                    new { htmlAttributes = new { @class = "form-check-input" } })
                @Html.ValidationMessageFor(model => model.Post.HasAgeRestriction, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Post.AgeRestrictionFrom,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Post.AgeRestrictionFrom,
                    new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Post.AgeRestrictionFrom, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Post.AgeRestrictionTo,
                htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Post.AgeRestrictionTo,
                    new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Post.AgeRestrictionTo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Files,
                htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Files, new { name = "Files", type = "file", multiple = "multiple", required = "required",
               accept = "image/*"})
                @Html.ValidationMessageFor(model => model.Files, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to your feed", "Index", "Home")
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>